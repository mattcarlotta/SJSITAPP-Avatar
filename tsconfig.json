{
  "compilerOptions": {
    "diagnostics": true,
    "declaration": true,
    "allowJs": true,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./build",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "typeRoots": ["@types", "node_modules/@types"],
    "paths": {
      "~controllers": ["controllers/index"],
      "~database/*": ["database/*"],
      "~database": ["database/index"],
      "~helpers/*": ["helpers/*"],
      "~helpers": ["helpers/index"],
      "~logger": ["logger/index"],
      "~middlewares": ["middlewares/index"],
      "~models": ["models/index"],
      "~routes": ["routes/index"],
      "~strategies": ["strategies/index"],
      "~utils/*": ["utils/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": [
    ".github",
    "build",
    "coverage",
    "node_modules",
    "uploads",
    "images"
  ]
}
